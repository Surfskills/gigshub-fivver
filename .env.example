# Direct Postgres connection (used for migrations)
DATABASE_URL="postgresql://user:password@host:5432/postgres?sslmode=require"

# Prisma Accelerate (used for runtime queries)
PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Custom sign-in/sign-up (required for your /sign-in and /sign-up pages to be used)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
CLERK_SIGN_IN_URL=/sign-in
CLERK_SIGN_UP_URL=/sign-up

# After auth redirects
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

RESEND_API_KEY="re_..."
CRON_SECRET="your-random-secret"
